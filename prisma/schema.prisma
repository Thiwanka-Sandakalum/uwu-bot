generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data.sqlite"
}



// schema.prisma

// Table for Courses 
model Courses {
  CourseCode   String    @id 
  CourseName   String    
  LecturerName String    
  TimetableSlots TimetableSlots[]
  // Enrollments Enrollments[]
}

// Table for Timetable Slots
model TimetableSlots {
  SlotID     Int      @id @default(autoincrement())
  Day        String   
  TimeStart  String
  TimeEnd    String
  CourseCode String
  Location String
  Courses    Courses @relation(fields: [CourseCode], references: [CourseCode])
  @@index([CourseCode], name: "TimetableSlots_CourseCode_Index")
}


// Table for Students
model Students {
  StudentID   String      @id
  Name        String   
  Email       String?   
  Hostel      String?  
  PhoneNumber String?
  TelegramID  String?  
  // Enrollments Enrollments[]
}

